package Action_Class;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.interactions.Actions;

public class ActionClass {

	public static void main(String[] args) throws InterruptedException {
		WebDriver driver=new EdgeDriver();
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(2000));
		driver.get("https://automationwithpiyush.vercel.app/actions.html");
		Actions act=new Actions(driver);
		//Hover
		WebElement we=driver.findElement(By.xpath("//button"));
		act.moveToElement(we).build().perform();
		act.click(we).build().perform();
		Thread.sleep(1000);
		//Left Click
		WebElement lc=driver.findElement(By.id("click-text"));
		act.moveToElement(lc).build().perform();
		act.click(lc).build().perform();
		Thread.sleep(1000);
		//Right Click
		WebElement rc=driver.findElement(By.xpath("//i[@class='fas fa-mouse text-3xl mb-3 text-gray-600']"));
		act.moveToElement(rc).build().perform();
		act.contextClick(rc).build().perform();
		Thread.sleep(1000);
		//Double Click
		WebElement dc=driver.findElement(By.xpath("//i[@class='fas fa-bolt text-3xl mb-3 text-gray-600']"));
		act.moveToElement(dc).build().perform();
		act.doubleClick().build().perform();
		Thread.sleep(1000);
		//Click and Hold ----//div[@id='click-hold']
		WebElement ho=driver.findElement(By.xpath("//i[@class='fas fa-bolt text-3xl mb-3 text-gray-600']"));
		act.moveToElement(ho).build().perform();
		act.clickAndHold().build().perform();
		//act.release().build().perform();
		act.release(ho).build().perform();
		Thread.sleep(4000);
		//DragAndDrop
		WebElement src=driver.findElement(By.id("cap-ottawa"));
		WebElement dest=driver.findElement(By.id("target-canada"));
		act.dragAndDrop(src, dest).build().perform();
		Thread.sleep(2000);
		//Hover
		WebElement Hov=driver.findElement(By.id("//input[@id='pulse-slider']"));
		act.moveToElement(Hov).moveByOffset(20, 0).click().build().perform();
		act.moveToElement(Hov, 20, 0).click().build().perform();
		Thread.sleep(2000);
		driver.quit();
	}
}
